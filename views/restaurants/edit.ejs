<% include ../partials/header %>

<div class="container">
  <div class="jumbotron text-center">
    <h1>Edit <%= restaurant.name %></h1>
  </div>
  <div class="formContainer mx-auto">
    <form method="POST" action='/restaurants/<%= restaurant._id %>?_method=PUT'>
      <div class="form-group">
        <input type="text" name="restaurant[name]" value="<%= restaurant.name %>" required>
      </div>
      <div class="form-group">
        <input type="text" name="restaurant[image]" value="<%= restaurant.image %>" required>
      </div>
      <div class="form-group">
        <input type="text" name="restaurant[desc]" value="<%= restaurant.desc %>" required>
      </div>
      <button class="btn btn-primary submitBtn">Submit</button>
    </form>
    <a href="/restaurants">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>
